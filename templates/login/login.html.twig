{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
    <div class="min-h-screen flex flex-col items-center justify-center gap-4">

        <p class="">{{ ux_icon('lucide:newspaper', { class: 'text-5xl h-12 w-12' }) }}</p>

        <h1 class="text-center text-4xl flex items-center gap-2 mt-10">
            Ravis de vous revoir
            {{ ux_icon('ant-design:smile-twotone', { class: 'text-5xl h-10 w-10' }) }}
        </h1>

        <form method="post" class="w-[320px] border border-slate-100 rounded-lg shadow-sm p-4 bg-white">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as
                    {{ app.user.userIdentifier }},
                    <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <input type="email" placeholder="Votre adresse e-mail" value="{{ last_username }}" name="_username" id="username" class="" autocomplete="email" required autofocus>

            <input type="password" placeholder="Tapez votre mot de passe" name="_password" id="password" class="" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">


            <button class="flex items-center gap-2" type="submit">
                {{ ux_icon('lucide:user-circle', { class: 'h-6 w-6' }) }}
                Se connecter
            </button>
        </form>

        <a href="#" class="text-base">Mot de passe oubli√© ?</a>

    </div>
{% endblock %}