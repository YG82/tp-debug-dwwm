{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="grid place-items-center">
        <div>
            <h1 class="text-2xl font-bold mb-6 text-center">Connexion</h1>

            {% if app.user %}
                {% if app.user %}
